var SelectPlatform = React.createClass({
  // 选择平台onChange时的回调
  changeHandler: function(e) {
    this.props.selectPlatform(e.target.value)
  },
  render: function() {
    // return (
    //   <span>
    //     选择平台：
    //     <label><input type="radio" onChange={this.changeHandler} name="platform" value="PC" />PC</label>
