    //     <label><input type="radio" onChange={this.changeHandler} name="platform" value="App" />App</label>
    //   </span>
    // )

    return (
      <span>
        请选择平台
        <select onChange={this.changeHandler}>
          <option value="PC">PC</option>
          <option value="M">M</option>
          <option value="App">App</option>
        </select>
      </span>
    )

  }
})